<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/settinglayout"
    android:orientation="vertical"
    android:theme="@style/bodymain"
    tools:context=".activity.Setting">
    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Settings"
        android:theme="@style/bodymain"


        />
<TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:padding="1dp"
    android:background="#918F93"
    />
<RelativeLayout
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grid span"
        android:textSize="15dp"
        android:theme="@style/bodymain"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:padding="20dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="1"

        android:theme="@style/bodymain"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
       android:padding="20dp"
        android:gravity="center"
        android:textSize="15dp"


        android:id="@+id/gridno"/>



</RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:theme="@style/bodymain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version"
            android:textSize="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:padding="20dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="v1.0"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="20dp"
            android:gravity="center"
            android:theme="@style/bodymain"
            android:textSize="15dp"
            android:id="@+id/versoin"/>


<LinearLayout
    android:layout_marginTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/versoin"
    android:orientation="vertical"
    android:theme="@style/bodymain"
    >


    <TextView
        android:theme="@style/bodymain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="feedback"

        android:textSize="15dp"

        android:layout_marginLeft="4dp"
        android:padding="10dp"

        android:gravity="center"


        />


    <EditText
        android:theme="@style/bodymain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/feedback"
        android:textSize="15dp"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:padding="10dp"
android:hint="Write feedback here"
        android:inputType="textMultiLine"
        android:gravity="center"

        android:cursorVisible="false"
        android:lines="5"


        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="submit"
     android:theme="@style/bodymain"
        android:textSize="15dp"
        android:clickable="true"
        android:id="@+id/submitfeed"
        android:padding="10dp"

        android:gravity="center"
        android:layout_marginRight="14dp"

        android:layout_marginLeft="14dp"

        />

</LinearLayout>
    </RelativeLayout>

</LinearLayout>